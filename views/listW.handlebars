        <div class="col-xs-12 ">

          <div class="col-xs-10">
              <div id="wantedListDiv">
                  <h2 class="heading">Currently Wanted Items</h2>
                  <ul>
                    {{#each Wanted}}
                      {{#unless this.found}}
                        <li>
                          <div class="row">
                            <div class="col-xs-3">
                              <img src="
                              {{this.mainPic}}">
                            </div>
                            <div clss="col-xs-9">
                              <div class="col-xs-10 offset-xs-1">
                                <p class="itemshortDescriptionP">{{this.shortDescription}}</p>
                              </div>
                              <div class="col-xs-12">
                                <form action="itemW/{{this.id}}?_method=GET" method="GET">
                                  <button class="btn btn-primary btn-lg priceB listBtn" type="submit">More Info</button>
                                </form>
                              </div>
                            </div>
                          </div>
                        </li>
                      {{/unless}}
                    {{/each}}
                  </ul>
              </div>
          </div> <!-- end container for item results -->
        </div>
      </div>

    </div>

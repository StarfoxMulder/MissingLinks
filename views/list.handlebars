<main id="page-content-wrapper">
  <div class="container-fluid">
    <header>
      <p><span style="font-size: 85px">M</span>ISSING <span style="font-size: 85px">L</span>INKS</p>
      <p id="undLine"><span style="font-size: 85px">____________________________</span></p>
    </header>

    <div class="row">

      <div class="col-xs-12 ">

        <div class="col-xs-10">
            <div id="itemListDiv">
                <h2 class="heading">Current Inventory</h2>
                <ul>
                  {{#each item}}
                    {{#unless this.sold}}
                      <li>
                        <div class="row">
                          <div class="col-xs-3">
                            <img
                            {{!-- however this gets connected to multer --}}
                            {{this.mainPic}} >
                          </div>
                          <div clss="col-xs-9">
                            <div class="col-xs-12">
                              <p class="itemPriceP">{{this.price}}</p>
                            </div>
                            <div class="col-xs-10 offset-xs-1">
                              <p class="itemshortDescriptionP">{{this.shortDescription}}</p>
                            </div>
                            <div class="col-xs-12">
                              <form action="items/moreInfo/{{this.id}}?_method=GET" method="GET">
                                <button class="btnMoreInfo" type="submit">More Info</button>
                              </form>
                            </div>
                          </div>
                        </div>
                      </li>
                    {{/unless}}
                  {{/each}}
                </ul>
            </div>
        </div> <!-- end container for item results -->
      </div>
    </div>
    <footer>
        <!-- blah blah footer -->
    </footer>

  </div>

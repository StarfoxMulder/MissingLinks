  <main id="page-content-wrapper" class="postPg">
    <div class="container-fluid">
      <header>
        <p class="itemHeader"><span style="font-size: 40px">M</span>ISSING <span style="font-size: 40px">L</span>INKS</p>
        <!-- <hr id="undLine" style="height:30px"> -->
      </header>

      <div class="row" id="subHeader">

        <div class="col-xs-10 col-xs-offset-2" id="postCol">
          <div class="row">
            <div class="jumbotron" id="jumbo">
              <form name="itemForm" onsubmit="return onsubmitForm();" method="POST">
                <div class="radio">
                  <label>
                    <input type="radio" name="optionsRadios" id="availablePostTog" value="sell" onclick="document.pressed=this.value">
                    I am looking to sell this item
                  </label>
                </div>
                <div class="radio">
                  <label>
                    <input type="radio" name="optionsRadios" id="wantedPostTog" value="want" onclick="document.pressed=this.value" checked>
                    I am looking to acquire this item
                  </label>
                </div>
                <div class="radio">
                  <label>
                    <input type="radio" name="optionsRadios" id="bothPostTog" value="both" onclick="document.pressed=this.value" disabled>
                    Whichever happens first!
                  </label>
                </div>
                <div class="form-group">
                  <label for="posterNameI">Poster Name</label>
                  <input type="name" class="form-control" id="posterNameI" placeholder="Your Name">
                </div>
                <div class="form-group">
                  <label for="itemNameI">Item Name</label>
                  <input type="item" class="form-control" id="itemNameI" placeholder="Item Name">
                </div>
                <div class="form-group">
                  <label for="shortDescI">Brief Description</label>
                  <textarea class="form-control" rows="3" id="shortDescI" placeholder="Please provide a brief description of your item"></textarea>
                </div>
                <div class="form-group">
                  <label for="longDescI">Full Description</label>
                  <textarea class="form-control" rows="3" id="longDescI" placeholder="If you would like to provide additional details about your item, please provide them here"></textarea>
                </div>
                <div class="form-group">
                  <label for="mainPicI">Item Image</label>
                  <input type="item" class="form-control" id="mainPicI" placeholder="Insert image URL here">
                </div>
                <div class="form-group">
                  <label for="pic2I">Item Image</label>
                  <input type="item" class="form-control" id="pic2I" placeholder="Insert image URL here">
                </div>
                <div class="form-group">
                  <label for="pic3I">Item Image</label>
                  <input type="item" class="form-control" id="pic3I" placeholder="Insert image URL here">
                </div>
                <div class="form-group">
                  <label for="pic4I">Item Image</label>
                  <input type="item" class="form-control" id="pic4I" placeholder="Insert image URL here">
                </div>
                <p class="lead">
                  <a class="btn btn-primary btn-lg" href="#" role="button" id="postItem">Submit</a>
                </p>
              </form>
            </div>
          </div>

        </div> <!-- end postCol -->

      </div> <!-- end subheader row -->

    </div>
